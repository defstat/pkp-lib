<?xml version="1.0" encoding="UTF-8"?>

<filteringSchema>
	<article class="classes.article.Article"
					 schema="submissions"
					 plural="articles"
					 setting_schema="submission_settings"
					 id="submission_id"
					 single-class-name="Article"
					 classDAO="ArticleDAO">
		<authors link-type="author"
						 getMethod="getAuthors">
			<getMethodParameters></getMethodParameters>
		</authors>
		
	</article>
	
	<author multiple="true"
					class="classes.article.Author"
					schema="authors"
					setting_schema="author_settings"
					single-class-name="Author"
					classDAO="AuthorDAO">
	</author>
	<representation multiple="true"
					class="lib.pkp.classes.submission.Representation"
					schema="authors"
					setting_schema="author_settings"
					single-class-name="Author"
					classDAO="RepresentationDAO">
	</representation>
</filteringSchema>
